<Window x:Class="PersonShower.PersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PersonShower"
        xmlns:views="clr-namespace:PersonShower.Views"
        mc:Ignorable="d"
        Title="PersonWindow" Height="500" Width="600">
    <Grid x:Name="RootGrid">
        <views:PersonDataControl DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window},Path=DataContext}"></views:PersonDataControl>
    </Grid>
</Window>
